<!-- Hero Section -->
<section id="hero" class="hero-section">
    <!-- Nuages flottants -->
    <div class="clouds-container">
        <div class="cloud cloud-1"></div>
        <div class="cloud cloud-2"></div>
        <div class="cloud cloud-3"></div>
    </div>

    <div class="container">
        <div class="hero-content">
            <!-- Badge Innovation -->
            <div class="badge">
                <span class="badge-dot"></span>
                <span>{{ section.settings.hero_badge | default: 'Innovation technologique ‚ö°' }}</span>
            </div>

            <!-- Titre principal -->
            <h1 class="hero-title">
                <span class="gradient-text">{{ section.settings.hero_title_highlight | default: 'Contr√¥le tout' }}</span>
                <br>
                <span>{{ section.settings.hero_title_normal | default: "d'un simple geste !" }}</span>
            </h1>

            <!-- Sous-titre -->
            <p class="hero-subtitle">
                {{ section.settings.hero_subtitle | default: 'La bague connect√©e qui r√©volutionne ton quotidien digital. Swipe, contr√¥le et capture sans jamais toucher ton √©cran üíç' }}
            </p>

            <!-- Image produit -->
            <div class="hero-image">
                {%- if section.settings.hero_image != blank -%}
                  <img src="{{ section.settings.hero_image | img_url: '400x' }}" 
                       alt="{{ section.settings.hero_image.alt | default: 'Zen Ring - Bague connect√©e Bluetooth' }}" 
                       class="product-image">
                {%- else -%}
                  <img src="{{ 'hero-product.jpg' | asset_url }}" 
                       alt="Zen Ring - Bague connect√©e Bluetooth" 
                       class="product-image">
                {%- endif -%}
                <div class="image-shine"></div>
            </div>

            <!-- Prix et CTA -->
            <div class="hero-cta">
                <div class="price-container">
                    <div class="price">
                        {%- if collections.all.products.first -%}
                          {%- assign product = collections.all.products.first -%}
                          <span class="old-price">{{ product.compare_at_price | money }}</span>
                          {{ product.price | money }}
                        {%- else -%}
                          <span class="old-price">29‚Ç¨</span>
                          19‚Ç¨
                        {%- endif -%}
                    </div>
                    <div class="shipping">{{ section.settings.shipping_text | default: 'Livraison gratuite üöö' }}</div>
                </div>
                
                <a href="{{ section.settings.hero_button_url | default: routes.collections_url }}" class="btn-primary">
                    {{ section.settings.cta_text | default: 'Je veux ma Zen Ring ‚ö°' }}
                    <span class="btn-arrow">‚Üí</span>
                </a>
            </div>

            <!-- Garanties -->
            <div class="guarantees">
                <div class="guarantee-item">
                    <span class="check">‚úì</span>
                    {{ section.settings.guarantee_1 | default: 'Garantie 30 jours' }}
                </div>
                <div class="guarantee-item">
                    <span class="check">‚úì</span>
                    {{ section.settings.guarantee_2 | default: 'Paiement s√©curis√©' }}
                </div>
                <div class="guarantee-item">
                    <span class="check">‚úì</span>
                    {{ section.settings.guarantee_3 | default: 'Stock limit√©' }}
                </div>
            </div>
        </div>
    </div>
</section>

